<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_shop_name_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop Name: "/>
    <TextView
        android:layout_alignBottom="@id/tv_shop_name_header"
        android:layout_toRightOf="@id/tv_shop_name_header"
        android:id="@+id/tv_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pizza"/>
    <TextView
        android:layout_below="@id/tv_shop_name_header"
        android:id="@+id/tv_address_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: "/>
    <TextView
        android:layout_toRightOf="@id/tv_address_header"
        android:layout_alignBottom="@id/tv_address_header"
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hamilton St "/>
    <TextView
        android:layout_below="@id/tv_address_header"
        android:id="@+id/tv_rating_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating: "/>
    <TextView
        android:layout_alignBottom="@id/tv_rating_header"
        android:layout_toRightOf="@id/tv_rating_header"
        android:id="@+id/tv_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"/>
    <TextView
        android:layout_below="@id/tv_rating"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/divider"
        android:layout_marginTop="8dp"/>

</RelativeLayout>